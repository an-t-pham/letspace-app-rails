<%= render partial: 'layouts/errors', locals: {obj: @review} %>

<%= form_for @review, url: @url  do |f| %>
    <%= f.label :rating, "How many stars would you rate this property? (1-5)" %><br>
    <%= f.number_field :rating, min:1, max:5 %><br>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <br />
    <%= f.hidden_field :property_id %><br>

    <%= f.submit %>
  <% end %>