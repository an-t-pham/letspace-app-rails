<nav style="background-color: darkcyan;">
    <% if !@review %>
            <ul class="nav justify-content-between p-2">
              <li class='pt-3' style='color: white; font-size: 20px;'><h2><%= @property.address %></h2></li>
                <li class='nav-link'><%= link_to "Leave a Review", new_tenant_property_review_path(@tenant, @property), class: 'nav-link' %></li>
                </ul>
              <% else %>
              <ul class="nav justify-content-end p-2">
              <li class='pt-3' style='color: white; font-size: 20px; margin-right: 750px;'><h2><%= @property.address %></h2></li>
                <li class='nav-link'><%= link_to "Edit Review", edit_tenant_property_review_path(@tenant, @property, @review), class: 'nav-link' %></li>
                <li class='nav-link'><%= link_to "Delete Review", tenant_property_review_path(@tenant, @property, @review), method: :delete, class: 'nav-link' %></li>
              <% end %>
            </ul>
        
</nav>

<div class='pl-3'>
<p><%= image_tag  @property.image_url,  maxHeight: '50%', maxWidth: '50%' %></p>
<p><b>Price:</b> Â£<%= @property.price %>pcm<p>
<p><b>Description:</b> <%= @property.description %><p>

<% if @reviews %>
   <p><b>Reviews:</b></p>
  <ol>
    <% @reviews.each do |review| %>
      <li><ul>
            <li>Stars: <%= review.rating %>/5</li>
            <li>Title: <%= review.title %></li>
            <li>Content: <%= review.content %></li>
            <li>Reviewed by: <%= review.tenant.user.name %></li>
      </li></ul><br>
    <% end %>
  </ol>
<% end %>

<p><%= link_to "<<", tenant_path(@tenant), :class => 'back' %></p>
</div>