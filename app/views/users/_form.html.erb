<%= render partial: 'layouts/errors', locals: {obj: @user} %>

<%= form_for @user  do |f| %>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %><br>
  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %><br>
  <%= f.label :email %><br>
  <%= f.text_field :email %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.label :bio %><br>
  <%= f.text_field :bio %><br>
  <%= f.label :image_url %><br>
  <%= f.text_field :image_url %><br>
  <% if !@edit %>
    <%= f.label :landlord_checkbox, "Check box if you are a landlord" %>
    <%= f.hidden_field :landlord_checkbox, value: "0" %>
    <%= f.check_box :landlord_checkbox %><br>
  <% end %>
  
  <br />

  <%= f.submit %>
<% end %>
