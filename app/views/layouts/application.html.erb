<!DOCTYPE html>
<html>
  <head>
    <title>LetSpaceApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="wrapper">
  <% if flash[:error] %>
  <h3 style="color:lightpink; text-align:center; padding-top: 20px; background:grey; padding-bottom:20px; margin-bottom: 0;"><%= flash[:error]%></h3>
  <% end %>

  <% if flash[:message] %>
  <h3 style="color:lightblue; text-align:center; padding-top: 20px; background:grey; padding-bottom:20px; margin-bottom: 0;"><%= flash[:message]%></h3>
  <% end %>
    <%= yield %>
  </body>
</html>
